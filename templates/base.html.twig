<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}E-Shop {% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/app.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/header.css') }}"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="sidebar">
        {% block sidebar %}
            <div class="left-side-links">
                <a href="{{ path('app_products') }}">Products</a>
                <a href="#">Orders</a>
                {% if app.user != null and 'ROLE_ADMIN' in app.user.roles %}
                <a href="{{ path('app_categories') }}">Categories</a>
                {% endif %}
            </div>

            <div class="right-side-links">
                {% if app.user == null %}
                    <a href="{{ path('app_login') }}">Login</a>
                {% else %}
                    <span>Welcome back, {{ app.user.getUsername }}</span>
                    <a href="{{ path('app_logout') }}">Logout</a>
                {% endif %}
            </div>

        {% endblock %}
    </div>

    <div id="content">
        {% block content %}{% endblock %}
    </div>
{% endblock %}
</body>
</html>