<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Super Shop |{% endblock %}</title>
    {% block stylesheets %}

        <!--CSS-->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/app.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/header.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/products.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/cart.css') }}"/>

        <!--BOOTSTRAP-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">

        <!--FONTS-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Francois+One&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Amaranth&family=Francois+One&display=swap"
              rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Glegoo&display=swap" rel="stylesheet">

    {% endblock %}
</head>
<body>
{% block body %}

    <header class="main-header">
        <a class="label-link" href="{{ path('app_products') }}">
            <img src="{{ asset('images/online-shop.svg') }}" alt="logo">
            <h2>Super Shop</h2>
        </a>

        <div class="right-side-links">
            {% if app.user == null %}
                <a href="{{ path('app_login') }}">Login</a>
            {% else %}
                <div class="dropdown">
                    <span>{{ app.user.getUsername }}</span>
                    <div class="dropdown-content">
                        <a href="{{ path('app_cart') }}">Cart</a>
                        <a href="{{ path('orders_history') }}">History</a>
                        <a href="{{ path('app_logout') }}">Log out</a>
                    </div>
                </div>
                <span></span>
            {% endif %}
        </div>

    </header>

    <div class="main-container">
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar">
                    <div class="sidebar-links">
                        <div class="link-with-button">
                            <a href="{{ path('get_products') }}">Products</a>
                            {% if app.user != null and 'ROLE_ADMIN' in app.user.roles %}
                                <a class="image-link" href="{{ path('create_product') }}">
                                    <img src="{{ asset('images/add-file.svg') }}" alt="add">
                                </a>
                            {% endif %}
                        </div>
                        <hr>
                        {% if app.user != null %}
                            <div class="link-with-button">
                                <a href="{{ path('app_orders') }}">Orders</a>
                            </div>
                            <hr>
                        {% endif %}
                        {% if app.user != null and 'ROLE_ADMIN' in app.user.roles %}
                            <div class="link-with-button">
                                <a href="{{ path('app_categories') }}">Categories</a>
                                <a class="image-link" href="{{ path('add_category') }}">
                                    <img src="{{ asset('images/add-file.svg') }}" alt="add">
                                </a>
                            </div>
                            <hr>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-1 vl-container">
                <div class="vl">
                </div>
            </div>
            <div class="col-md-8">
                <div id="content">
                    {% block content %}{% endblock %}
                </div>
            </div>

        </div>

    </div>
{% endblock %}

{{ flasher_render() }}

</body>
</html>