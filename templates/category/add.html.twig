{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} New new category{% endblock %}

{% block content %}
    <div class="content">

        <form method="post" class="product-form">

            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <h2>New category</h2>

            <hr>

            <div class="mb-3">
                <label for="inputName">Name</label>
                <input type="text" value="{{ name }}" name="name" id="inputName" class="form-control" autocomplete="name" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputDescription">Description</label>
                <textarea name="description" id="inputDescription" class="form-control description" rows="4" autocomplete="description" required>{{ description }}</textarea>
            </div>

            <button type="submit" class="btn btn-success">Add</button>
            <a href="{{ path('app_categories') }}" class="btn btn-danger">Cancel</a>

        </form>

    </div>
{% endblock %}