{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Categories{% endblock %}

{% block content %}
    <div class="content">

        <h3 class="section-header mt-3">Categories</h3>
        <hr>

        <div class="table">

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td style="width: 30%">{{ category.getName() }}</td>
                        <td style="width: 55%">{{ category.getDescription() }}</td>
                        <td style="width: 15%">
                            <a href="{{ path('edit_category', {'id': category.getId()}) }}" class="btn btn-primary">Edit</a> |
                            <a href="{{ path('delete_category', {'id': category.getId()}) }}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}