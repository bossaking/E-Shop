{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Delete product{% endblock %}

{% block content %}
    <div class="content">

        <form method="post" class="category-form">

            <h1>Delete product</h1>

            <hr>

            <div class="mb-3">
                <label for="inputName">Name</label>
                <input type="text" value="{{ name }}" name="name" id="inputName" class="form-control" autocomplete="name" readonly>
            </div>

            <div class="mb-3">
                <label for="inputDescription">Description</label>
                <input type="text" value="{{ description }}" name="description" id="inputDescription" class="form-control" autocomplete="description" readonly>
            </div>

            <div class="mb-3">
                <label for="inputPrice">Price</label>
                <input type="number" value="{{ price }}" name="price" id="inputPrice" class="form-control" autocomplete="price" readonly>
            </div>

            <div class="mb-3">
                <label for="inputCategory">Category</label>
                <input type="text" value="{{ category }}" name="category" id="inputCategory" class="form-control" autocomplete="category" readonly>
            </div>

            <button type="submit" class="btn btn-success">Delete</button>
            <a href="{{ path('app_products') }}" class="btn btn-danger">Cancel</a>

        </form>

    </div>
{% endblock %}